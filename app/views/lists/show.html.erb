<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/people-matters/image/upload/q_auto,f_auto/v1517845732/1517845731.jpg);">
  <div class="container">
    <h1><%= "All the movies in list #{@list.name}" %></h1>
    <p>Here we are going to post all the movies divided in lists.</p>
    <%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-secondary" %>
  </div>
</div>

<div class="cards p-1">
  <% @list.movies.each do |movie| %>
    <div class="card-category">
      <div class="card-product">
        <img src="<%= movie.poster_url %>" />
        <div class="card-product-infos">
          <h2><%= movie.title %></h2>
          <p><%= movie.overview %></p>
          <p><%= movie.rating %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
